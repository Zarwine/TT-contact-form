{% extends 'base.html.twig' %}
{% form_theme formContact 'bootstrap_4_layout.html.twig' %}

{% block title %}Contactez nous{% endblock %}

{% block body %}
<div class="container">
    <h1>Contactez nous</h1>

    {{ form_start(formContact) }}

    {{ form_row(formContact.lastname, {'label' : "Nom ", "attr" : { "placeholder" : "GUAZZELLI"}}) }}
    {{ form_row(formContact.firstname, {'label' : "Prénom ", "attr" : { "placeholder" : "Jonathan"}}) }}
    {{ form_row(formContact.mail, {'label' : "Email ", "attr" : { "placeholder" : "jonathan@hotmail.fr"}}) }}
    {{ form_row(formContact.phone, {'label' : "Téléphone ", "attr" : { "placeholder" : "0614956732"}}) }}
    {{ form_row(formContact.content, {'label' : "Message ", "attr" : { "placeholder" : "Entrez votre message"}}) }}

    <button class="btn btn-primary">Envoyer</button>

    {{ form_end(formContact) }}
</div>

{% endblock %}
