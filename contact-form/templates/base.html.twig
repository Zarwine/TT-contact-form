
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ACSEO - Test Technique{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/pulse/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-log navbar-dark bg-primary">
        <a class="navbar-brand" href="{{ path('home') }}">ACSEO</a>
        <div>
            <ul class="navbar-nav mr-auto">
                {% if not app.user %}
                <li class="nav-item"><a class="nav-link" href="{{ path('security_register') }}">Inscription</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('security_login') }}">Connexion</a></li>
                {% else %}
                <li class="nav-item"><a class="nav-link" href="{{ path('admin_dashboard') }}">Accéder au back-office</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('security_logout') }}">Déconnexion</a></li>
                {% endif %}
            </ul>
        </div>
    </nav>
        <div class="container">
        {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>